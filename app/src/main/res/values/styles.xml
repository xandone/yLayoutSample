<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/act_anim_style</item>
    </style>

    <style name="act_anim_style" parent="@android:style/Animation">
        <!-- 新Activity 进入 -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <!-- 旧Activity退出 -->
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <!-- 新Activity退出 -->
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <!-- 旧Activity进入 -->
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>

    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="normal_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="normal_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_normal</item>
        <item name="android:textColor">@color/tv_normal</item>
    </style>

</resources>
